        function collectOrGroups() {
            const orGroups = [];
            const container = document.getElementById('orGroupsContainer');

            if (!container) return orGroups;

            const groups = container.querySelectorAll('.or-group-item');

            groups.forEach(groupDiv => {
                const groupId = groupDiv.id.split('_')[1];
                const typeSelect = document.getElementById(`orType_${groupId}`);

                if (!typeSelect) return;

                const type = typeSelect.value;

                if (type === 'single') {
                    const optionA = document.getElementById(`orSingleA_${groupId}`)?.value.trim();
                    const optionB = document.getElementById(`orSingleB_${groupId}`)?.value.trim();

                    if (optionA && optionB) {
                        orGroups.push({
                            type: 'single',
                            options: [optionA, optionB]
                        });
                        console.log(`Added single OR group: ${optionA} or ${optionB}`);
                    }
                } else {
                    const pairA = document.getElementById(`orPairA_${groupId}`)?.value.trim();
                    const pairB = document.getElementById(`orPairB_${groupId}`)?.value.trim();

                    if (pairA && pairB) {
                        orGroups.push({
                            type: 'pair',
                            option_a: pairA.split(',').map(q => q.trim()),
                            option_b: pairB.split(',').map(q => q.trim())
                        });
                        console.log(`Added pair OR group: [${pairA}] or [${pairB}]`);
                    }
                }
            });

            return orGroups;
        }
