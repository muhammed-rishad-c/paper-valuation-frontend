        // Validation function for OR groups
        function validateOrGroups(orGroups) {
            for (let i = 0; i < orGroups.length; i++) {
                const group = orGroups[i];

                if (group.type === 'single') {
                    // Validate single OR questions
                    if (!group.options || group.options.length !== 2) {
                        return {
                            valid: false,
                            error: `OR Group ${i + 1}: Must have exactly 2 options`
                        };
                    }

                    // Check if question numbers are valid
                    for (let opt of group.options) {
                        if (!/^\d+$/.test(opt)) {
                            return {
                                valid: false,
                                error: `OR Group ${i + 1}: "${opt}" is not a valid question number`
                            };
                        }
                    }

                    // Check for duplicates within group
                    if (group.options[0] === group.options[1]) {
                        return {
                            valid: false,
                            error: `OR Group ${i + 1}: Cannot have same question in both options (${group.options[0]})`
                        };
                    }

                } else if (group.type === 'pair') {
                    // Validate pair OR questions
                    if (!group.option_a || !group.option_b) {
                        return {
                            valid: false,
                            error: `OR Group ${i + 1}: Both pairs must be specified`
                        };
                    }

                    if (group.option_a.length === 0 || group.option_b.length === 0) {
                        return {
                            valid: false,
                            error: `OR Group ${i + 1}: Pairs cannot be empty`
                        };
                    }

                    // Validate all question numbers in pairs
                    const allQuestions = [...group.option_a, ...group.option_b];
                    for (let qNum of allQuestions) {
                        if (!/^\d+$/.test(qNum)) {
                            return {
                                valid: false,
                                error: `OR Group ${i + 1}: "${qNum}" is not a valid question number`
                            };
                        }
                    }

                    // Check for duplicates within same pair
                    const pairASet = new Set(group.option_a);
                    const pairBSet = new Set(group.option_b);

                    if (pairASet.size !== group.option_a.length) {
                        return {
                            valid: false,
                            error: `OR Group ${i + 1}: Pair A has duplicate questions`
                        };
                    }

                    if (pairBSet.size !== group.option_b.length) {
                        return {
                            valid: false,
                            error: `OR Group ${i + 1}: Pair B has duplicate questions`
                        };
                    }
                }
            }

            // Check for overlapping OR groups
            const allOrQuestions = new Set();
            for (let group of orGroups) {
                let questions = [];

                if (group.type === 'single') {
                    questions = group.options;
                } else {
                    questions = [...group.option_a, ...group.option_b];
                }

                for (let q of questions) {
                    if (allOrQuestions.has(q)) {
                        return {
                            valid: false,
                            error: `Question ${q} appears in multiple OR groups`
                        };
                    }
                    allOrQuestions.add(q);
                }
            }

            return { valid: true };
        }

