<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Paper Valuation System</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body class="auth-page">

    <div class="auth-card">

        <!-- Header -->
        <div class="auth-header">
            <div class="icon">üéì</div>
            <h1>Create Account</h1>
            <p>Join the Paper Valuation System</p>
        </div>

        <!-- Form Body -->
        <div class="auth-body">

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-box">
                    ‚ö†Ô∏è <%= error %>
                </div>
            <% } %>

            <form action="/register" method="POST">

                <!-- Username -->
                <div class="form-group">
                    <label for="username">Username</label>
                    <input
                        type="text"
                        id="username"
                        name="username"
                        placeholder="e.g. john_teacher"
                        required
                        autofocus
                        pattern="[a-zA-Z0-9_]{3,50}"
                        title="3-50 characters, letters, numbers and underscores"
                    >
                    <div class="form-hint">3‚Äì50 characters, letters and numbers only</div>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="e.g. john@school.com"
                        required
                    >
                </div>

                <!-- Full Name -->
                <div class="form-group">
                    <label for="full_name">
                        Full Name
                        <span class="optional-tag">(optional)</span>
                    </label>
                    <input
                        type="text"
                        id="full_name"
                        name="full_name"
                        placeholder="e.g. John Smith"
                    >
                </div>

                <!-- Password -->
                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Minimum 8 characters"
                        required
                        minlength="8"
                    >
                    <div class="form-hint">At least 8 characters</div>
                </div>

                <!-- Confirm Password -->
                <div class="form-group">
                    <label for="confirm_password">Confirm Password</label>
                    <input
                        type="password"
                        id="confirm_password"
                        name="confirm_password"
                        placeholder="Repeat your password"
                        required
                        minlength="8"
                    >
                </div>

                <button type="submit" class="btn-submit">
                    Create Account ‚Üí
                </button>

            </form>

            <hr class="divider">

            <div class="auth-footer">
                Already have an account?
                <a href="/login">Login here</a>
            </div>

        </div>
    </div>

    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            const password = document.getElementById('password').value;
            const confirm  = document.getElementById('confirm_password').value;
            if (password !== confirm) {
                e.preventDefault();
                alert('Passwords do not match! Please try again.');
                document.getElementById('confirm_password').focus();
            }
        });
    </script>

</body>
</html>
